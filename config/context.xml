<?xml version="1.0" encoding="UTF-8"?>
<!-- Configuracion de servidor [implementa datasources]-->
<Context path="/BancoWeb">    
    <Resource          
        type="javax.sql.DataSource"
        auth="Container"
        name="jdbc/banco"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://localhost:3306/banco"
        username="root"
        password="root"
        maxActive="100"
        maxIdle="30"
        maxWait="10000"            
        validationQuery="SELECT 1 FROM dual"      
        >
    </Resource>
      
</Context>

